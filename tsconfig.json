{
    "compilerOptions": {
        "target": "es2019",
        "module": "Node16",
        "lib": ["es2019", "dom"],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "rewriteRelativeImportExtensions": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
